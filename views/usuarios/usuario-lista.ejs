<!DOCTYPE html>
<html lang="pt-BR" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ProS - Gestão de Usuários</title>
    <link rel="icon" href="/images/favicon.png" type="image/png">

    <link rel="stylesheet" href="/vendor/css/simplebar.css">
    <link rel="stylesheet" href="/vendor/css/sweetalert2.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&amp;display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.3/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/3.0.1/css/select.dataTables.css">
    <link rel="stylesheet" href="/vendor/css/tom-select.min.css">
</head>

<body
    class="font-theme flex flex-col h-full text-base font-normal bg-zinc-50 dark:bg-zinc-950 text-zinc-600 dark:text-zinc-300">

    <%- include('../partials/sidebar') %>

        <main class="flex-1 lg:ms-64 flex flex-col app-content">

            <%- include('../partials/header') %>

                <div class="px-4 lg:px-8 py-4">
                    <h2 class="text-xl mb-2">Gestão de Usuários</h2>
                    <ol class="flex gap-1 items-center text-sm">
                        <li class="flex items-center">
                            <a href="/dashboard"
                                class="text-zinc-400 hover:text-zinc-700 dark:hover:text-white">Dashboard</a>
                        </li>
                        <li class="flex items-center opacity-30 leading-none">
                            <span class="icon-[lucide--chevron-right] rtl:rotate-180"></span>
                        </li>
                        <li class="flex items-center"><span class="pointer-events-none">Usuários</span></li>
                    </ol>
                </div>

                <div class="content flex-grow lg:px-4">
                    <div class="grid grid-cols-1 px-4">
                        <div class="rounded-xl bg-white dark:bg-zinc-900 shadow-card mb-4">

                            <div
                                class="flex flex-wrap gap-2 items-center p-4 border-b border-zinc-500/10 dark:border-zinc-800">

                                <div class="flex-grow">
                                    <div class="relative">
                                        <input type="search" class="input !ps-9" name="userSearch" id="userSearch"
                                            placeholder="Buscar por nome ou e-mail...">
                                        <span
                                            class="iconify icon-[lucide--search] pointer-events-none absolute start-0 top-0 h-full flex items-center justify-center ms-3 text-muted"></span>
                                    </div>
                                </div>

                                <div class="flex items-center flex-wrap justify-end gap-2">
                                    <button id="inativarBtn" class="btn bg-amber-500 text-white hover:bg-amber-600"
                                        style="display: none;">
                                        Inativar Selecionados
                                    </button>

                                    <div class="flex-grow w-56 sm:w-auto">
                                        <select id="statusFilter" class="js-select w-full sm:w-56">
                                            <option value="" selected>Todos os Status</option>
                                            <option value="Ativo">Ativo</option>
                                            <option value="Inativo">Inativo</option>
                                        </select>
                                    </div>

                                    <div class="flex items-center gap-2">
                                        <a href="/usuario/novo"
                                            class="btn bg-primary shrink-0 text-white hover:bg-primary-deep">
                                            <span class="icon-[lucide--user-plus] text-lg me-1"></span>
                                            Novo Usuário
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <table id="table_usuarios" class="table-default w-full">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Usuário</th>
                                        <th>Unidade</th>
                                        <th>Perfil</th>
                                        <th>Status</th>
                                        <th data-orderable="false">Ações</th>
                                    </tr>
                                </thead>
                                <tbody id="tableBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>

        </main>

        <div id="dados-usuarios-json" style="display: none;"><%- usuariosJson %></div>

        <div id="permissoes-user" style="display: none;">
            <%- JSON.stringify(user.permissoes || {}) %>
        </div>

        <script src="/js/theme.js"></script>
        <script src="/vendor/js/jquery.min.js"></script>
        <script src="https://cdn.datatables.net/2.3.3/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/select/3.0.1/js/dataTables.select.js"></script>
        <script src="https://cdn.datatables.net/select/3.0.1/js/select.dataTables.js"></script>
        <script src="/vendor/js/sweetalert2.all.min.js"></script>

        <script>
            // 1. LER PERMISSÕES COM SEGURANÇA
            const userEmail = "<%= user.email %>";
            const userPerfilNome = "<%= user.nome_perfil %>";

            let permUsuario = {};
            try {
                const divPerm = document.getElementById('permissoes-user');
                const todasPermissoes = JSON.parse(divPerm.innerText);
                // Verifica 'usuarios' ou 'usuario'
                permUsuario = todasPermissoes['usuarios'] || todasPermissoes['usuario'] || {};
            } catch (e) { console.error(e); }

            let canEdit = false;
            let canCreate = false;
            let canInactivate = false;

            // Admin Bypass
            if (userEmail === 'admin@admin.com' || userPerfilNome === 'Administrador' || userPerfilNome === 'Super Admin') {
                canEdit = true;
                canCreate = true;
                canInactivate = true;
            } else {
                const podeTudo = (permUsuario.tudo == 1 || permUsuario.tudo === true);

                if (podeTudo || permUsuario.editar == 1 || permUsuario.editar === true || permUsuario.pode_editar == 1) {
                    canEdit = true;
                }
                if (podeTudo || permUsuario.criar == 1 || permUsuario.criar === true || permUsuario.pode_criar == 1) {
                    canCreate = true;
                }
                if (podeTudo || permUsuario.inativar == 1 || permUsuario.inativar === true || permUsuario.pode_inativar == 1) {
                    canInactivate = true;
                }
            }
        </script>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                // 2. LER DADOS
                let listaUsuarios = [];
                try {
                    const divJson = document.getElementById('dados-usuarios-json');
                    if (divJson && divJson.innerText) {
                        listaUsuarios = JSON.parse(divJson.innerText);
                    }
                } catch (e) {
                    console.error("Erro ao ler JSON:", e);
                }

                // 3. RENDERIZAR TABELA
                const tbody = document.getElementById('tableBody');
                tbody.innerHTML = '';

                listaUsuarios.forEach((u, index) => {
                    const tr = document.createElement('tr');
                    tr.setAttribute('data-index', index);

                    const statusHtml = u.ativo
                        ? '<span class="badge bg-green-500/10 text-green-500 status-badge">Ativo</span>'
                        : '<span class="badge bg-zinc-500/10 text-zinc-500 status-badge">Inativo</span>';

                    const nomeCompleto = u.nome_completo || "Sem Nome";
                    const iniciais = nomeCompleto.substring(0, 2).toUpperCase();

                    tr.innerHTML = `
                        <td></td>
                        <td>
                            <div class="flex items-center">
                                <div class="flex flex-nowrap items-center gap-2.5">
                                    <div class="size-10 rounded-full shrink-0 bg-primary/10 text-primary flex items-center justify-center font-bold text-sm">
                                        ${iniciais}
                                    </div>
                                    <div class="flex-grow">
                                        <h6 class="font-semibold text-zinc-900 dark:text-zinc-100">${nomeCompleto}</h6>
                                        <p class="text-muted text-sm">${u.email || ''}</p>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="whitespace-nowrap text-sm">${u.nome_unidade || '-'}</td>
                        <td>
                            <span class="badge bg-zinc-100 text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300 border border-zinc-200 dark:border-zinc-700">
                                ${u.nome_perfil || '-'}
                            </span>
                        </td>
                        <td>${statusHtml}</td>
                        <td>
                            <div class="flex items-center gap-1 relative z-[1]">
                                <a href="/usuario/editar/${u.id_usuario}" class="btn !p-1.5 hover:!text-primary" title="Editar">
                                    <span class="icon-[lucide--edit] text-lg"></span>
                                </a>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });

                // 4. INICIALIZAR DATATABLE
                const table = new DataTable('#table_usuarios', {
                    lengthChange: false, pageLength: 10, scrollX: true, dom: 'lrtip',
                    columnDefs: [
                        { orderable: false, searchable: false, render: DataTable.render.select(), targets: 0 }
                    ],
                    select: { style: 'os', selector: 'td:first-child', headerCheckbox: false },
                    order: [[1, 'asc']]
                });

                document.getElementById('userSearch').addEventListener('input', e => {
                    table.search(e.target.value).draw();
                });

                document.getElementById('statusFilter').addEventListener('change', function () {
                    table.columns(4).search(this.value).draw();
                });

                // 5. INTERCEPTADOR DE CLIQUES (BLOQUEIO VISUAL)
                document.body.addEventListener('click', function (e) {
                    // Editar
                    const linkEditar = e.target.closest('a[href^="/usuario/editar/"]');
                    if (linkEditar && !canEdit) {
                        e.preventDefault();
                        Swal.fire({ title: 'Acesso Negado', text: 'Você não tem permissão para editar usuários.', icon: 'warning', confirmButtonColor: '#f59e0b', confirmButtonText: 'Entendido' });
                    }
                    // Novo
                    const linkNovo = e.target.closest('a[href="/usuario/novo"]');
                    if (linkNovo && !canCreate) {
                        e.preventDefault();
                        Swal.fire({ title: 'Acesso Negado', text: 'Você não tem permissão para criar novos usuários.', icon: 'warning', confirmButtonColor: '#f59e0b', confirmButtonText: 'Entendido' });
                    }
                });

                // 6. INATIVAR
                const inativarBtn = document.getElementById("inativarBtn");
                table.on('select deselect', function () {
                    const count = table.rows({ selected: true }).count();
                    inativarBtn.style.display = count > 0 ? "inline-flex" : "none";
                    inativarBtn.innerHTML = `Inativar Selecionados (${count})`;
                });

                inativarBtn.addEventListener('click', function () {
                    // Bloqueio no botão
                    if (!canInactivate) {
                        Swal.fire({ title: 'Acesso Negado', text: 'Você não tem permissão para inativar usuários.', icon: 'warning', confirmButtonColor: '#f59e0b' });
                        return;
                    }

                    const selectedRows = table.rows({ selected: true }).nodes();
                    const selectedIds = [];
                    const jaInativos = [];

                    selectedRows.each(function (row) {
                        const index = row.getAttribute('data-index');
                        if (index !== null && listaUsuarios[index]) {
                            const u = listaUsuarios[index];
                            if (u.ativo === 0) jaInativos.push(u.nome_completo);
                            else selectedIds.push(u.id_usuario);
                        }
                    });

                    if (jaInativos.length > 0) {
                        Swal.fire({ icon: 'warning', title: 'Ação Bloqueada', html: `Os seguintes usuários <b>já estão inativos</b>:<br><br>${jaInativos.join('<br>')}<br><br>Desmarque-os para continuar.` });
                        return;
                    }

                    if (selectedIds.length === 0) return;

                    Swal.fire({
                        title: 'Tem certeza?', text: `Deseja inativar ${selectedIds.length} usuário(s)?`, icon: 'warning',
                        showCancelButton: true, confirmButtonText: 'Sim, inativar', cancelButtonText: 'Cancelar',
                        confirmButtonColor: '#ef4444', cancelButtonColor: '#3f3f46'
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            try {
                                const response = await fetch('/usuario/inativar-multiplos', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                                    body: JSON.stringify({ ids: selectedIds })
                                });

                                if (response.status === 403) {
                                    Swal.fire({ title: 'Acesso Negado', text: 'Permissão negada pelo servidor (403).', icon: 'warning', confirmButtonColor: '#f59e0b' });
                                    return;
                                }

                                const data = await response.json();
                                if (data.success) {
                                    Swal.fire('Sucesso', data.message, 'success').then(() => window.location.reload());
                                } else {
                                    Swal.fire('Erro', data.message, 'error');
                                }
                            } catch (err) {
                                Swal.fire('Erro no Servidor', err.message, 'error');
                            }
                        }
                    });
                });
            });
        </script>

        <script src="/vendor/js/tom-select.complete.min.js"></script>
        <script>
            document.querySelectorAll('.js-select').forEach(select => {
                new TomSelect(select, { create: false, allowEmptyOption: true });
            });
        </script>
</body>

</html>