<!DOCTYPE html>
<html lang="pt-BR" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Raven - Atividade do Usuário</title>
    <link rel="icon" href="/images/favicon.png" type="image/png">
    <link rel="stylesheet" href="/vendor/css/simplebar.css">
    <link rel="preconnect" href="https://fonts.googleapis.com/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&amp;display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/vendor/css/tom-select.min.css">
</head>

<body
    class="font-theme flex flex-col h-full text-base font-normal bg-zinc-50 dark:bg-zinc-950 text-zinc-600 dark:text-zinc-300">

    <%- include('../partials/sidebar') %>

        <main class="flex-1 lg:ms-64 flex flex-col app-content">

            <%- include('../partials/header') %>

                <div class="px-4 lg:px-10 py-6">
                    <h2 class="text-2xl mb-2">Atividade do Usuário</h2>
                    <ol class="flex gap-1 items-center text-sm">
                        <li class="flex items-center">
                            <a href="/usuarios"
                                class="text-zinc-400 hover:text-zinc-700 dark:hover:text-white">Usuários</a>
                        </li>
                        <li class="flex items-center opacity-30 leading-none">
                            <span class="icon-[lucide--chevron-right] rtl:rotate-180"></span>
                        </li>
                        <li class="flex items-center"><span class="pointer-events-none">Atividade</span></li>
                    </ol>
                </div>

                <div class="content flex-grow px-4 lg:px-10 pb-10">
                    <div class="rounded-xl bg-white dark:bg-zinc-900 shadow-card mb-4">
                        <div class="p-4 md:p-6 max-w-3xl mx-auto">

                            <div
                                class="mb-7 flex flex-col md:flex-row items-center justify-between gap-4 border-b border-zinc-100 pb-4 dark:border-zinc-800">

                                <label class="flex items-center text-sm gap-2 cursor-pointer">
                                    <span class="flex-grow">Atualização auto. (30s)</span>
                                    <input class="input-switch" id="autoRefreshToggle" type="checkbox">
                                </label>

                                <div class="flex flex-wrap items-center gap-2 w-full md:w-auto">
                                    <div class="w-full md:w-48">
                                        <select id="filtroUsuario" class="js-select" placeholder="Filtrar Usuário">
                                            <option value="">Todos Usuários</option>
                                            <% listaUsuarios.forEach(u=> { %>
                                                <option value="<%= u.id_usuario %>">
                                                    <%= u.nome_completo %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>

                                    <div class="w-full md:w-40">
                                        <select id="filtroModulo" class="js-select" placeholder="Módulo">
                                            <option value="">Todos Módulos</option>
                                            <option value="ordem_servico">Ordens de Serviço</option>
                                            <option value="cliente">Clientes</option>
                                            <option value="epi">EPIs</option>
                                            <option value="risco">Riscos</option>
                                        </select>
                                    </div>

                                    <div class="w-full md:w-48">
                                        <input type="date" id="filtroData"
                                            class="input h-[38px] w-full bg-white dark:bg-zinc-900 cursor-pointer">
                                    </div>
                                    <button id="btnFiltrar" class="btn btn-default h-[38px]">
                                        <span class="icon-[lucide--filter]"></span>
                                    </button>
                                </div>
                            </div>

                            <div id="timelineContainer" class="min-h-[300px]">
                                <div class="text-center py-10 text-zinc-400">
                                    <span
                                        class="animate-spin inline-block h-6 w-6 border-2 border-current border-t-transparent rounded-full mb-2"></span>
                                    <p>Carregando atividades...</p>
                                </div>
                            </div>

                            <div id="paginationContainer"
                                class="mt-6 pt-4 border-t border-zinc-100 dark:border-zinc-800 flex items-center justify-between hidden">
                                <button id="btnPrevPage" class="btn btn-outline-secondary btn-sm" disabled>
                                    <span class="icon-[lucide--chevron-left]"></span> Anterior
                                </button>

                                <span class="text-sm text-zinc-500 font-medium" id="pageInfo">
                                    Página 1 de 1
                                </span>

                                <button id="btnNextPage" class="btn btn-outline-secondary btn-sm" disabled>
                                    Próxima <span class="icon-[lucide--chevron-right]"></span>
                                </button>
                            </div>

                        </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>
        </main>

        <script src="/js/theme.js"></script>
        <script src="/vendor/js/tom-select.complete.min.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                // Inicializa TomSelects
                document.querySelectorAll('.js-select').forEach(el => new TomSelect(el, { create: false }));

                const timelineContainer = document.getElementById('timelineContainer');
                const paginationContainer = document.getElementById('paginationContainer');
                const btnPrevPage = document.getElementById('btnPrevPage');
                const btnNextPage = document.getElementById('btnNextPage');
                const pageInfo = document.getElementById('pageInfo');

                const filtroUsuario = document.getElementById('filtroUsuario');
                const filtroModulo = document.getElementById('filtroModulo');
                const filtroData = document.getElementById('filtroData');
                const btnFiltrar = document.getElementById('btnFiltrar');
                const autoRefreshToggle = document.getElementById('autoRefreshToggle');

                let refreshInterval;
                let currentPage = 1; // Controla a página atual

                // --- FUNÇÃO PRINCIPAL: BUSCAR LOGS ---
                async function fetchLogs(page = 1) {
                    const idUser = filtroUsuario.value;
                    const mod = filtroModulo.value;
                    const data = filtroData.value;

                    // Monta URL com parâmetros
                    const params = new URLSearchParams();
                    params.append('page', page); // Envia a página atual
                    if (idUser) params.append('id_usuario', idUser);
                    if (mod) params.append('modulo', mod);
                    if (data) params.append('data_inicio', data);

                    // Mostra loading se for filtro manual (não auto-refresh)
                    if (page === 1 && !refreshInterval) {
                        timelineContainer.innerHTML = '<div class="text-center py-10 text-zinc-400"><span class="animate-spin inline-block h-6 w-6 border-2 border-current border-t-transparent rounded-full mb-2"></span><p>Carregando...</p></div>';
                    }

                    try {
                        const response = await fetch(`/atividades/api/listar?${params.toString()}`);
                        const json = await response.json();

                        if (json.success) {
                            renderTimeline(json.data);
                            updatePagination(json.pagination);
                        } else {
                            timelineContainer.innerHTML = '<p class="text-center text-red-500">Erro ao carregar dados.</p>';
                        }
                    } catch (error) {
                        console.error(error);
                        timelineContainer.innerHTML = '<p class="text-center text-zinc-400">Falha na conexão.</p>';
                    }
                }

                // --- ATUALIZA A PAGINAÇÃO ---
                function updatePagination(pagination) {
                    if (!pagination || pagination.totalRegistros === 0) {
                        paginationContainer.classList.add('hidden');
                        return;
                    }

                    paginationContainer.classList.remove('hidden');
                    pageInfo.textContent = `Página ${pagination.paginaAtual} de ${pagination.totalPaginas}`;

                    // Lógica dos botões
                    btnPrevPage.disabled = pagination.paginaAtual <= 1;
                    btnNextPage.disabled = pagination.paginaAtual >= pagination.totalPaginas;

                    currentPage = pagination.paginaAtual;
                }

                // --- RENDERIZAÇÃO ---
                function renderTimeline(logs) {
                    if (logs.length === 0) {
                        timelineContainer.innerHTML = `
                        <div class="flex flex-col items-center justify-center py-10 text-zinc-400">
                            <span class="icon-[lucide--activity] text-4xl mb-2 opacity-50"></span>
                            <p>Nenhuma atividade encontrada.</p>
                        </div>
                    `;
                        return;
                    }

                    let html = '';
                    let lastDate = '';

                    logs.forEach(log => {
                        const logDate = new Date(log.data_full).toLocaleDateString();
                        const hoje = new Date().toLocaleDateString();
                        const ontemDate = new Date();
                        ontemDate.setDate(ontemDate.getDate() - 1);
                        const ontem = ontemDate.toLocaleDateString();

                        if (logDate !== lastDate) {
                            let labelDate = logDate;
                            if (logDate === hoje) labelDate = "Hoje";
                            else if (logDate === ontem) labelDate = "Ontem";

                            if (lastDate !== '') html += '</ul><div class="my-5"></div>';

                            html += `<span class="font-semibold block mb-2 text-muted text-sm uppercase tracking-wider">${labelDate}</span>`;
                            html += '<ul class="timeline">';
                            lastDate = logDate;
                        }

                        const iniciais = log.usuario_nome.substring(0, 2).toUpperCase();

                        html += `
                        <li class="timeline-item">
                            <div class="timeline-item-wrapper">
                                <div class="timeline-item-media shrink-0">
                                    <div class="timeline-item-media-content">
                                        <span class="size-9 flex items-center justify-center rounded-full bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-300 font-bold text-xs border border-zinc-200 dark:border-zinc-700">
                                            ${iniciais}
                                        </span>
                                    </div>
                                    <div class="timeline-connect"></div>
                                </div>
                                <div class="timeline-item-content">
                                    <div class="mt-1 bg-white dark:bg-zinc-800/50 p-3 rounded-lg border border-zinc-100 dark:border-zinc-800/50 shadow-sm">
                                        <div class="flex justify-between items-start">
                                            <div>
                                                <p class="mb-1 text-sm text-zinc-800 dark:text-zinc-200">
                                                    <span class="font-bold text-zinc-900 dark:text-white">${log.usuario_nome}</span>
                                                </p>
                                                <p class="text-sm text-zinc-600 dark:text-zinc-400">
                                                    <span class="icon-[lucide--${log.icone}] text-${log.cor} align-text-bottom me-1"></span>
                                                    ${log.titulo}
                                                </p>
                                            </div>
                                            <span class="text-xs text-muted whitespace-nowrap ms-2">${log.hora}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    `;
                    });

                    html += '</ul>';
                    timelineContainer.innerHTML = html;
                }

                // --- EVENTOS ---
                btnFiltrar.addEventListener('click', () => {
                    currentPage = 1; // Reseta para primeira página ao filtrar
                    fetchLogs(currentPage);
                });

                btnPrevPage.addEventListener('click', () => {
                    if (currentPage > 1) fetchLogs(currentPage - 1);
                });

                btnNextPage.addEventListener('click', () => {
                    fetchLogs(currentPage + 1);
                });

                autoRefreshToggle.addEventListener('change', (e) => {
                    if (e.target.checked) {
                        // Ao ativar auto-refresh, voltamos para a primeira página
                        currentPage = 1;
                        fetchLogs(1);
                        refreshInterval = setInterval(() => fetchLogs(1), 30000);
                    } else {
                        clearInterval(refreshInterval);
                        refreshInterval = null;
                    }
                });

                // Carga Inicial
                fetchLogs(1);
            });
        </script>
</body>

</html>