    <script>
        (function () {
            const $ = (id) => document.getElementById(id);
            const onlyDigits = (v) => (v || "").replace(/\D/g, "");

            // ====== Formatadores (máscaras) ======
            function formatCep(value) {
                const d = onlyDigits(value).slice(0, 8);
                if (d.length <= 5) return d;
                return d.slice(0, 5) + "-" + d.slice(5);
            }

            function formatCnpj(value) {
                const d = onlyDigits(value).slice(0, 14);
                if (d.length <= 2) return d;
                if (d.length <= 5) return d.slice(0, 2) + "." + d.slice(2);
                if (d.length <= 8) return d.slice(0, 2) + "." + d.slice(2, 5) + "." + d.slice(5);
                if (d.length <= 12) return d.slice(0, 2) + "." + d.slice(2, 5) + "." + d.slice(5, 8) + "/" + d.slice(8);
                return d.slice(0, 2) + "." + d.slice(2, 5) + "." + d.slice(5, 8) + "/" + d.slice(8, 12) + "-" + d.slice(12);
            }

            function formatCpf(value) {
                const d = onlyDigits(value).slice(0, 11);
                if (d.length <= 3) return d;
                if (d.length <= 6) return d.slice(0, 3) + "." + d.slice(3);
                if (d.length <= 9) return d.slice(0, 3) + "." + d.slice(3, 6) + "." + d.slice(6);
                return d.slice(0, 3) + "." + d.slice(3, 6) + "." + d.slice(6, 9) + "-" + d.slice(9);
            }

            function formatTelefone(value) {
                const d = onlyDigits(value).slice(0, 11); // 10 ou 11
                if (d.length <= 2) return d;

                const ddd = d.slice(0, 2);
                const rest = d.slice(2);

                // 11 dígitos: (##) #####-####
                if (d.length >= 11) {
                    return "(" + ddd + ") " + rest.slice(0, 5) + "-" + rest.slice(5, 9);
                }

                // 10 dígitos: (##) ####-####
                if (d.length >= 7) {
                    return "(" + ddd + ") " + rest.slice(0, 4) + "-" + rest.slice(4, 8);
                }

                return "(" + ddd + ") " + rest;
            }

            function applyMask(inputEl, formatter) {
                if (!inputEl) return;
                inputEl.addEventListener("input", () => {
                    const formatted = formatter(inputEl.value);
                    if (inputEl.value !== formatted) inputEl.value = formatted;
                });
            }

            // ====== Validação CPF ======
            function isValidCpf(cpfDigits) {
                const cpf = onlyDigits(cpfDigits);

                if (cpf.length !== 11) return false;
                // bloqueia CPFs com todos dígitos iguais
                if (/^(\d)\1{10}$/.test(cpf)) return false;

                const calcCheck = (base, factor) => {
                    let total = 0;
                    for (let i = 0; i < base.length; i++) {
                        total += Number(base[i]) * (factor - i);
                    }
                    const mod = (total * 10) % 11;
                    return (mod === 10) ? 0 : mod;
                };

                const d1 = calcCheck(cpf.slice(0, 9), 10);
                const d2 = calcCheck(cpf.slice(0, 10), 11);

                return d1 === Number(cpf[9]) && d2 === Number(cpf[10]);
            }

            function ensureMsgEl(afterInputEl, id) {
                let el = $(id);
                if (el) return el;

                el = document.createElement("p");
                el.id = id;
                el.className = "text-sm mt-2 hidden";
                afterInputEl.insertAdjacentElement("afterend", el);
                return el;
            }

            function setFieldState(inputEl, msgEl, text, type) {
                // type: "error" | "success" | "info" | "clear"
                msgEl.classList.remove("hidden", "text-red-500", "text-green-600", "text-zinc-400");

                if (type === "clear") {
                    msgEl.classList.add("hidden");
                    msgEl.textContent = "";
                    inputEl.removeAttribute("aria-invalid");
                    return;
                }

                msgEl.textContent = text;
                if (type === "error") {
                    msgEl.classList.add("text-red-500");
                    inputEl.setAttribute("aria-invalid", "true");
                } else if (type === "success") {
                    msgEl.classList.add("text-green-600");
                    inputEl.removeAttribute("aria-invalid");
                } else {
                    msgEl.classList.add("text-zinc-400");
                    inputEl.removeAttribute("aria-invalid");
                }
            }

            // ====== ViaCEP (já com foco no número) ======
            const cepInput = $("cep");
            const btnBuscarCep = $("btnBuscarCep");
            const cepMsg = $("cepMsg");

            const logradouro = $("logradouro");
            const bairro = $("bairro");
            const cidade = $("cidade");
            const estado = $("estado");
            const numero = $("numero");

            async function buscarCep() {
                if (!cepInput || !btnBuscarCep || !cepMsg) return;

                const cep = onlyDigits(cepInput.value);
                if (cep.length !== 8) {
                    cepMsg.classList.remove("hidden");
                    cepMsg.className = "text-sm mt-2 text-red-500";
                    cepMsg.textContent = "Informe um CEP válido (8 dígitos).";
                    return;
                }

                btnBuscarCep.disabled = true;
                btnBuscarCep.classList.add("opacity-60", "cursor-not-allowed");

                cepMsg.classList.remove("hidden");
                cepMsg.className = "text-sm mt-2 text-zinc-400";
                cepMsg.textContent = "Buscando CEP...";

                try {
                    const res = await fetch(`https://viacep.com.br/ws/${cep}/json/`, { method: "GET" });
                    if (!res.ok) throw new Error("Falha na consulta do CEP.");
                    const data = await res.json();

                    if (data.erro) {
                        cepMsg.className = "text-sm mt-2 text-red-500";
                        cepMsg.textContent = "CEP não encontrado.";
                        return;
                    }

                    if (logradouro) logradouro.value = data.logradouro || "";
                    if (bairro) bairro.value = data.bairro || "";
                    if (cidade) cidade.value = data.localidade || "";
                    if (estado) estado.value = data.uf || "";

                    cepMsg.className = "text-sm mt-2 text-green-600";
                    cepMsg.textContent = "Endereço preenchido com sucesso.";

                    if (numero) numero.focus();
                } catch (e) {
                    console.error(e);
                    cepMsg.className = "text-sm mt-2 text-red-500";
                    cepMsg.textContent = "Não foi possível buscar o CEP. Tente novamente.";
                } finally {
                    btnBuscarCep.disabled = false;
                    btnBuscarCep.classList.remove("opacity-60", "cursor-not-allowed");
                }
            }

            // ====== Aplicar máscaras ======
            applyMask(cepInput, formatCep);
            applyMask($("cnpj"), formatCnpj);
            applyMask($("telefone"), formatTelefone);
            applyMask($("cpf"), formatCpf);

            // CEP buscar por clique / enter
            btnBuscarCep?.addEventListener("click", buscarCep);
            cepInput?.addEventListener("keydown", (e) => {
                if (e.key === "Enter") {
                    e.preventDefault();
                    buscarCep();
                }
            });

            // ====== Validar CPF no blur e antes de enviar ======
            const cpfInput = $("cpf");
            if (cpfInput) {
                const cpfMsg = ensureMsgEl(cpfInput, "cpfMsg");

                cpfInput.addEventListener("input", () => {
                    // enquanto digita, só limpa estado
                    setFieldState(cpfInput, cpfMsg, "", "clear");
                });

                cpfInput.addEventListener("blur", () => {
                    const cpf = onlyDigits(cpfInput.value);
                    if (!cpf) {
                        setFieldState(cpfInput, cpfMsg, "", "clear");
                        return;
                    }
                    if (!isValidCpf(cpf)) {
                        setFieldState(cpfInput, cpfMsg, "CPF inválido. Verifique e tente novamente.", "error");
                    } else {
                        setFieldState(cpfInput, cpfMsg, "CPF válido.", "success");
                    }
                });

                // Bloquear submit se CPF inválido
                const form = cpfInput.closest("form");
                form?.addEventListener("submit", (e) => {
                    const cpf = onlyDigits(cpfInput.value);
                    if (cpf && !isValidCpf(cpf)) {
                        e.preventDefault();
                        setFieldState(cpfInput, cpfMsg, "CPF inválido. Corrija para salvar.", "error");
                        cpfInput.focus();
                    }
                });
            }
        })();
    </script>
