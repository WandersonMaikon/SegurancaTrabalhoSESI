<!DOCTYPE html>
<html lang="pt-BR" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ProS - Clientes</title>
    <link rel="icon" href="/images/favicon.png" type="image/png">

    <link rel="stylesheet" href="/vendor/css/simplebar.css">
    <link rel="stylesheet" href="/vendor/css/sweetalert2.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&amp;display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.3/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/3.0.1/css/select.dataTables.css">
    <link rel="stylesheet" href="/vendor/css/tom-select.min.css">
</head>

<body
    class="font-theme flex flex-col h-full text-base font-normal bg-zinc-50 dark:bg-zinc-950 text-zinc-600 dark:text-zinc-300">

    <%- include('../partials/sidebar') %>

        <main class="flex-1 lg:ms-64 flex flex-col app-content">
            <%- include('../partials/header') %>

                <div class="px-4 lg:px-8 py-4">
                    <h2 class="text-xl mb-2">Clientes</h2>
                    <ol class="flex gap-1 items-center text-sm">
                        <li class="flex items-center">
                            <a href="/dashboard"
                                class="text-zinc-400 hover:text-zinc-700 dark:hover:text-white">Dashboard</a>
                        </li>
                        <li class="flex items-center opacity-30 leading-none">
                            <span class="icon-[lucide--chevron-right] rtl:rotate-180"></span>
                        </li>
                        <li class="flex items-center"><span class="pointer-events-none">Clientes</span></li>
                    </ol>
                </div>

                <div class="content flex-grow lg:px-4">
                    <div class="grid grid-cols-1 px-4">
                        <div class="rounded-xl bg-white dark:bg-zinc-900 shadow-card mb-4">

                            <div
                                class="flex flex-wrap gap-2 items-center p-4 border-b border-zinc-500/10 dark:border-zinc-800">
                                <div class="flex-grow">
                                    <div class="relative">
                                        <input type="search" class="input !ps-9" name="customerSearch"
                                            id="customerSearch" placeholder="Buscar cliente">
                                        <span
                                            class="iconify icon-[lucide--search] pointer-events-none absolute start-0 top-0 h-full flex items-center justify-center ms-3 text-muted"></span>
                                    </div>
                                </div>

                                <div class="flex items-center flex-wrap justify-end gap-2">
                                    <button id="deleteBtn" class="btn bg-red-500 text-white hover:bg-red-600"
                                        style="display: none;">
                                        <span class="icon-[lucide--trash] text-lg me-1"></span> Inativar
                                    </button>

                                    <div class="flex-grow w-56 sm:w-auto">
                                        <select id="statusFilter" class="js-select w-full sm:w-56">
                                            <option value="">Todos</option>
                                            <option value="Ativo" selected>Ativo</option>
                                            <option value="Inativo">Inativo</option>
                                        </select>
                                    </div>

                                    <div class="flex items-center gap-2">
                                        <a href="/clientes/novo"
                                            class="btn bg-primary shrink-0 text-white hover:bg-primary-deep">
                                            <span class="icon-[lucide--user-plus] text-lg me-1"></span> Criar Novo
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="overflow-x-auto">
                                <table id="table_customers" class="table-default w-full">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th class="text-nowrap">Nome da Empresa</th>
                                            <th class="text-nowrap">CNPJ</th>
                                            <th class="text-nowrap">Localização</th>
                                            <th class="text-nowrap">Status</th>
                                            <th class="text-nowrap" data-orderable="false">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableBody"></tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>
        </main>

        <div id="dados-clientes-json" style="display: none;">
            <%= clientesJson %>
        </div>

        <div id="permissoes-clientes-json" style="display: none;">
            <%- JSON.stringify(user.permissoes && user.permissoes['clientes'] ? user.permissoes['clientes'] : {}) %>
        </div>

        <script src="/js/theme.js"></script>
        <script src="/vendor/js/jquery.min.js"></script>
        <script src="https://cdn.datatables.net/2.3.3/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/select/3.0.1/js/dataTables.select.js"></script>
        <script src="https://cdn.datatables.net/select/3.0.1/js/select.dataTables.js"></script>
        <script src="/vendor/js/sweetalert2.all.min.js"></script>
        <script src="/vendor/js/tom-select.complete.min.js"></script>

        <script>
            const userEmail = "<%= user.email %>";
            const userPerfilNome = "<%= user.nome_perfil %>";

            // LER AS PERMISSÕES DA DIV OCULTA (VS Code não reclama e EJS não quebra)
            let permClientes = {};
            try {
                const divPerm = document.getElementById('permissoes-clientes-json');
                if (divPerm && divPerm.innerText) {
                    permClientes = JSON.parse(divPerm.innerText);
                }
            } catch (e) {
                console.error("Erro ao ler permissões:", e);
            }

            let canEdit = false;
            let canCreate = false;
            let canInactivate = false;

            // Admin Bypass
            if (userEmail === 'admin@admin.com' || userPerfilNome === 'Administrador' || userPerfilNome === 'Super Admin') {
                canEdit = true;
                canCreate = true;
                canInactivate = true;
            } else {
                // Permissão para Editar
                if ((permClientes.pode_editar == 1 || permClientes.pode_editar === true) ||
                    (permClientes.tudo == 1 || permClientes.tudo === true)) {
                    canEdit = true;
                }
                // Permissão para Criar
                if ((permClientes.pode_criar == 1 || permClientes.pode_criar === true) ||
                    (permClientes.tudo == 1 || permClientes.tudo === true)) {
                    canCreate = true;
                }
                // Permissão para Inativar
                if ((permClientes.pode_inativar == 1 || permClientes.pode_inativar === true) ||
                    (permClientes.tudo == 1 || permClientes.tudo === true)) {
                    canInactivate = true;
                }
            }
        </script>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                let listaClientes = [];
                try {
                    const divJson = document.getElementById('dados-clientes-json');
                    if (divJson && divJson.innerText.trim()) {
                        listaClientes = JSON.parse(divJson.innerText);
                    }
                } catch (e) { console.error(e); }

                const tbody = document.getElementById('tableBody');
                tbody.innerHTML = '';

                // Renderiza as linhas SOMENTE se houver dados
                listaClientes.forEach((cliente, index) => {
                    const tr = document.createElement('tr');
                    tr.setAttribute('data-index', index);

                    const statusHtml = (Number(cliente.ativo) === 1)
                        ? '<span class="badge bg-green-500/10 text-green-500 status-badge">Ativo</span>'
                        : '<span class="badge bg-zinc-500/10 text-zinc-500 status-badge">Inativo</span>';

                    const localizacao = (cliente.cidade && cliente.estado)
                        ? `${cliente.cidade} - ${cliente.estado}`
                        : (cliente.cidade || '-');

                    tr.innerHTML = `
                        <td></td>
                        <td class="font-semibold text-zinc-900 whitespace-nowrap dark:text-white">
                            ${cliente.nome_empresa || 'Sem Nome'}
                        </td>
                        <td class="whitespace-nowrap">${cliente.cnpj || '-'}</td>
                        <td class="whitespace-nowrap">${localizacao}</td>
                        <td>${statusHtml}</td>
                        <td>
                            <div class="flex items-center gap-1 relative z-[1]">
                                <a href="/clientes/editar/${cliente.id_cliente}" class="btn !p-1.5 hover:!text-primary" title="Editar">
                                    <span class=" icon-[lucide--edit] text-lg"></span>
                                </a>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });

                // Inicializa DataTables
                const table = new DataTable('#table_customers', {
                    lengthChange: false,
                    pageLength: 10,
                    scrollX: true,
                    dom: 'lrtip',
                    language: {
                        emptyTable: "Nenhum cliente encontrado",
                        info: "Mostrando _START_ até _END_ de _TOTAL_ registros",
                        paginate: { first: "Primeiro", last: "Último", next: "Próximo", previous: "Anterior" },
                        select: { rows: "" }
                    },
                    columnDefs: [
                        { orderable: false, className: 'select-checkbox', targets: 0 }
                    ],
                    select: {
                        style: 'multi',
                        selector: 'td:first-child',
                        headerCheckbox: true
                    },
                    order: [[1, 'asc']]
                });

                // Busca
                document.getElementById('customerSearch').addEventListener('input', e => {
                    table.search(e.target.value).draw();
                });

                // Botão Inativar
                const deleteBtn = document.getElementById("deleteBtn");
                table.on('select deselect', function () {
                    const count = table.rows({ selected: true }).count();
                    deleteBtn.style.display = count > 0 ? "inline-flex" : "none";
                    deleteBtn.innerHTML = `<span class="icon-[lucide--trash] text-lg me-1"></span> Inativar (${count})`;
                });

                // Filtro Status
                document.getElementById('statusFilter').addEventListener('change', function () {
                    table.columns(4).search(this.value).draw();
                });

                // =========================================================================
                // 2. INTERCEPTADOR DE CLIQUES (EDITAR E NOVO)
                // =========================================================================
                document.body.addEventListener('click', function (e) {
                    // LINK EDITAR
                    const linkEditar = e.target.closest('a[href^="/clientes/editar/"]');
                    if (linkEditar && !canEdit) {
                        e.preventDefault();
                        Swal.fire({
                            title: 'Acesso Negado',
                            text: 'Você não tem permissão para editar clientes.',
                            icon: 'warning',
                            confirmButtonColor: '#f59e0b',
                            confirmButtonText: 'Entendido'
                        });
                    }

                    // LINK NOVO
                    const linkNovo = e.target.closest('a[href="/clientes/novo"]');
                    if (linkNovo && !canCreate) {
                        e.preventDefault();
                        Swal.fire({
                            title: 'Acesso Negado',
                            text: 'Você não tem permissão para criar novos clientes.',
                            icon: 'warning',
                            confirmButtonColor: '#f59e0b',
                            confirmButtonText: 'Entendido'
                        });
                    }
                });

                // =========================================================================
                // 3. AÇÃO INATIVAR (Com Bloqueio)
                // =========================================================================
                deleteBtn.addEventListener('click', function () {

                    if (!canInactivate) {
                        Swal.fire({
                            title: 'Acesso Negado',
                            text: 'Você não tem permissão para inativar clientes.',
                            icon: 'warning',
                            confirmButtonColor: '#f59e0b',
                            confirmButtonText: 'Entendido'
                        });
                        return;
                    }

                    const selectedRows = table.rows({ selected: true }).nodes();
                    const selectedIds = [];

                    selectedRows.each(function (row) {
                        const index = row.getAttribute('data-index');
                        if (index !== null && listaClientes[index]) {
                            const c = listaClientes[index];
                            selectedIds.push(c.id_cliente);
                        }
                    });

                    if (selectedIds.length === 0) return;

                    Swal.fire({
                        title: 'Tem certeza?',
                        text: `Você vai inativar ${selectedIds.length} cliente(s).`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Sim, inativar',
                        cancelButtonText: 'Cancelar'
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            try {
                                const response = await fetch('/clientes/inativar-multiplos', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'Accept': 'application/json'
                                    },
                                    body: JSON.stringify({ ids: selectedIds })
                                });

                                if (!response.ok) {
                                    if (response.status === 404) throw new Error('Rota não encontrada (404).');
                                    if (response.status === 500) throw new Error('Erro interno do servidor (500).');
                                    if (response.status === 403) {
                                        Swal.fire({ title: 'Acesso Negado', text: 'Permissão negada pelo servidor (403).', icon: 'warning', confirmButtonColor: '#f59e0b' });
                                        return;
                                    }
                                    throw new Error(`Erro desconhecido: ${response.status}`);
                                }

                                const data = await response.json();
                                if (data.success) {
                                    Swal.fire('Sucesso!', data.message, 'success').then(() => location.reload());
                                } else {
                                    Swal.fire('Erro', data.message, 'error');
                                }
                            } catch (error) {
                                console.error(error);
                                Swal.fire('Erro', error.message || 'Falha na comunicação.', 'error');
                            }
                        }
                    });
                });
            });

            document.querySelectorAll('.js-select').forEach(select => {
                new TomSelect(select, { create: false, allowEmptyOption: true });
            });
        </script>
</body>

</html>