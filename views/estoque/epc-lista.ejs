<!DOCTYPE html>
<html lang="pt-BR" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ProS - EPC</title>

    <link rel="icon" href="/images/favicon.png" type="image/png">

    <link rel="stylesheet" href="/vendor/css/simplebar.css">
    <link rel="stylesheet" href="/vendor/css/sweetalert2.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&amp;display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.3/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/3.0.1/css/select.dataTables.css">
    <link rel="stylesheet" href="/vendor/css/tom-select.min.css">
</head>

<body
    class="font-theme flex flex-col h-full text-base font-normal bg-zinc-50 dark:bg-zinc-950 text-zinc-600 dark:text-zinc-300 text-left rtl:text-right">

    <%- include('../partials/sidebar') %>

        <main class="flex-1 lg:ms-64 flex flex-col app-content">

            <%- include('../partials/header') %>

                <div class="px-4 lg:px-8 py-4">
                    <h2 class="text-xl mb-2">EPC</h2>
                    <ol class="flex gap-1 items-center text-sm">
                        <li class="flex items-center">
                            <a href="/dashboard" class="text-zinc-400 hover:text-zinc-700 dark:hover:text-white">
                                Dashboard</a>
                        </li>
                        <li class="flex items-center opacity-30 leading-none">
                            <span class="icon-[lucide--chevron-right] rtl:rotate-180"></span>
                        </li>
                        <li class="flex items-center">
                            <span class="text-zinc-400">Cadastros</span>
                        </li>
                        <li class="flex items-center opacity-30 leading-none">
                            <span class="icon-[lucide--chevron-right] rtl:rotate-180"></span>
                        </li>
                        <li class="flex items-center"><span class="pointer-events-none">EPC</span></li>
                    </ol>
                </div>

                <div class="content flex-grow lg:px-4">
                    <div class="grid grid-cols-1 px-4">
                        <div class="rounded-xl bg-white dark:bg-zinc-900 shadow-card mb-4">

                            <div
                                class="flex flex-wrap gap-2 items-center p-4 border-b border-zinc-500/10 dark:border-zinc-800">
                                <div class="flex-grow">
                                    <div class="relative">
                                        <input type="search" class="input !ps-9" name="epcSearch" id="epcSearch"
                                            placeholder="Buscar EPC (nome ou observação)">
                                        <span
                                            class="iconify icon-[lucide--search] pointer-events-none absolute start-0 top-0 h-full flex items-center justify-center ms-3 text-muted"></span>
                                    </div>
                                </div>

                                <div class="flex items-center flex-wrap justify-end gap-2">
                                    <button id="deleteBtnEpc" class="btn bg-red-500 text-white hover:bg-red-600"
                                        style="display:none;">
                                        <span class="icon-[lucide--trash] text-lg me-1"></span> Inativar
                                    </button>

                                    <div class="flex-grow w-56 sm:w-auto">
                                        <select id="statusFilter" class="js-select w-full sm:w-56">
                                            <option value="">Todos</option>
                                            <option value="Ativo" selected>Ativo</option>
                                            <option value="Inativo">Inativo</option>
                                        </select>
                                    </div>

                                    <div class="flex items-center gap-2">
                                        <a href="/epc/novo"
                                            class="btn bg-primary shrink-0 text-white hover:bg-primary-deep">
                                            <span class="icon-[lucide--plus] text-lg me-1"></span>
                                            Criar Novo
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="overflow-x-auto">
                                <table id="table_epc" class="table-default w-full">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th class="text-nowrap">
                                                <div class="flex items-center">Nome</div>
                                            </th>
                                            <th class="text-nowrap">
                                                <div class="flex items-center">Observações</div>
                                            </th>
                                            <th class="text-nowrap">Status</th>
                                            <th class="text-nowrap" data-orderable="false">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableBody"></tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>

        </main>

        <div id="epc-data" style="display: none;"><%- epcsJson %></div>

        <script src="/js/theme.js"></script>
        <script src="/vendor/js/jquery.min.js"></script>
        <script src="/vendor/js/sweetalert2.all.min.js"></script>
        <script src="https://cdn.datatables.net/2.3.3/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/select/3.0.1/js/dataTables.select.js"></script>
        <script src="https://cdn.datatables.net/select/3.0.1/js/select.dataTables.js"></script>
        <script src="/vendor/js/tom-select.complete.min.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', () => {

                // ============================================================
                // 1. LÓGICA DE ALERTA DE PERMISSÃO (Igual Riscos)
                // Se o backend redirecionar para /epc?alert=sem_permissao
                // ============================================================
                const urlParams = new URLSearchParams(window.location.search);
                const alertType = urlParams.get('alert');

                if (alertType === 'sem_permissao') {
                    Swal.fire({
                        title: 'Acesso Negado',
                        text: 'Você não tem permissão para acessar a tela de edição/criação.',
                        icon: 'warning',
                        confirmButtonColor: '#f59e0b',
                        confirmButtonText: 'Entendido'
                    });
                    // Limpa a URL para não ficar mostrando o alerta se der F5
                    window.history.replaceState(null, '', window.location.pathname);
                }

                // ============================================================
                // 2. LER DADOS E MONTAR TABELA
                // ============================================================
                let listaEpcs = [];
                try {
                    const divJson = document.getElementById('epc-data');
                    if (divJson && divJson.innerText.trim()) {
                        listaEpcs = JSON.parse(divJson.innerText);
                    }
                } catch (e) { console.error("Erro ao ler JSON de EPCs:", e); }

                const tbody = document.getElementById('tableBody');
                tbody.innerHTML = '';

                listaEpcs.forEach((epc, index) => {
                    const tr = document.createElement('tr');
                    tr.setAttribute('data-index', index);

                    const statusHtml = (Number(epc.ativo) === 1)
                        ? '<span class="badge bg-green-500/10 text-green-500 status-badge">Ativo</span>'
                        : '<span class="badge bg-zinc-500/10 text-zinc-500 status-badge">Inativo</span>';

                    tr.innerHTML = `
                        <td></td>
                        <td class="font-semibold text-zinc-900 whitespace-nowrap dark:text-white">
                            ${epc.nome}
                        </td>
                        <td class="whitespace-nowrap">
                            ${epc.observacoes || '-'}
                        </td>
                        <td>${statusHtml}</td>
                        <td>
                            <div class="flex items-center gap-1 relative z-[1]">
                                <a href="/epc/editar/${epc.id_epc}" class="btn !p-1.5 hover:!text-primary" title="Editar">
                                    <span class="icon-[lucide--edit] text-lg"></span>
                                </a>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });

                // 3. Inicializar DataTables
                const table = new DataTable('#table_epc', {
                    lengthChange: false,
                    pageLength: 9,
                    scrollX: true,
                    dom: 'lrtip',
                    columnDefs: [
                        { orderable: false, className: 'select-checkbox', targets: 0 },
                        { orderable: false, targets: 4 }
                    ],
                    select: {
                        style: 'multi',
                        selector: 'td:first-child',
                        headerCheckbox: true
                    },
                    order: [[1, 'asc']],
                    language: {
                        emptyTable: "Nenhum EPC cadastrado",
                        info: "Mostrando _START_ até _END_ de _TOTAL_ registros",
                        paginate: { first: "«", last: "»", next: "›", previous: "‹" },
                        select: { rows: "" }
                    }
                });

                // 4. Busca
                const searchInput = document.getElementById('epcSearch');
                searchInput.addEventListener('input', e => {
                    table.search(e.target.value).draw();
                });

                // 5. Filtro de Status
                document.getElementById('statusFilter').addEventListener('change', function () {
                    table.columns(3).search(this.value).draw();
                });

                // ============================================================
                // 3. LÓGICA DE INATIVAR (Igual Riscos - Tratamento de 403)
                // ============================================================
                const deleteBtn = document.getElementById('deleteBtnEpc');

                table.on('select deselect', function () {
                    const count = table.rows({ selected: true }).count();
                    deleteBtn.style.display = count > 0 ? 'inline-flex' : 'none';
                    deleteBtn.innerHTML = `<span class="icon-[lucide--trash] text-lg me-1"></span> Inativar (${count})`;
                });

                deleteBtn.addEventListener('click', () => {
                    const selectedRows = table.rows({ selected: true }).nodes();
                    const selectedIds = [];
                    selectedRows.each(function (row) {
                        const index = row.getAttribute('data-index');
                        if (listaEpcs[index]) selectedIds.push(listaEpcs[index].id_epc);
                    });

                    if (selectedIds.length === 0) return;

                    Swal.fire({
                        title: 'Inativar EPCs?',
                        text: `Deseja inativar ${selectedIds.length} item(ns)?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#ef4444',
                        cancelButtonColor: '#3f3f46',
                        confirmButtonText: 'Sim, inativar',
                        cancelButtonText: 'Cancelar'
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            try {
                                const response = await fetch('/epc/inativar-multiplos', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'Accept': 'application/json' // Importante para o middleware saber que é API
                                    },
                                    body: JSON.stringify({ ids: selectedIds })
                                });

                                // Tratamento de Erro de Permissão (403)
                                if (response.status === 403) {
                                    Swal.fire({
                                        title: 'Acesso Negado',
                                        text: 'Você não tem permissão para inativar EPCs.',
                                        icon: 'warning',
                                        confirmButtonColor: '#f59e0b'
                                    });
                                    return;
                                }

                                if (!response.ok) {
                                    throw new Error(`Erro no servidor: ${response.status}`);
                                }

                                const data = await response.json();
                                if (data.success) {
                                    Swal.fire('Sucesso', data.message, 'success').then(() => location.reload());
                                } else {
                                    Swal.fire('Erro', data.message, 'error');
                                }
                            } catch (error) {
                                Swal.fire('Erro', error.message || 'Falha na comunicação.', 'error');
                            }
                        }
                    });
                });

            });

            document.querySelectorAll('.js-select').forEach(select => {
                new TomSelect(select, { create: false, allowEmptyOption: true });
            });
        </script>
</body>

</html>