                                        <input type="text"
                                            class="input h-10 w-full bg-zinc-100 dark:bg-zinc-800 font-bold cursor-not-allowed"
                                            value="<%= (typeof user !== 'undefined' && user) ? (user.nome_completo || user.nome) : 'Usuário não identificado' %>"
                                            disabled>
                                    </div>
