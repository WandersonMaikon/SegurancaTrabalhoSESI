                    }

                    // CORREÇÃO CRÍTICA: Força o ajuste das colunas após o modal estar visível
                    // Isso impede que a tabela apareça "invisível" ou com largura 0
                    $('#table_cliente_modal').DataTable().columns.adjust().draw();

