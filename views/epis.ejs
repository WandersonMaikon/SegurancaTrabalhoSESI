        <script src="https://cdn.datatables.net/select/3.0.1/js/select.dataTables.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const table = new DataTable('#table_epi', {
                    lengthChange: false,
                    pageLength: 9,
                    scrollX: true,
                    dom: 'lrtip',
                    columnDefs: [
                        {
                            orderable: false,
                            searchable: false,
                            render: DataTable.render.select(),
                            targets: 0,
                        }
                    ],
                    select: {
                        style: 'os',
                        selector: 'td:first-child',
                        headerCheckbox: false
                    },
                    order: [[1, 'asc']], // Nome
                });

                const searchInput = document.getElementById('epiSearch');
                searchInput.addEventListener('input', e => {
                    table.search(e.target.value).draw();
                });

                table.on('draw', () => {
                    const rowCount = table.rows({ search: 'applied' }).count();
                    if (rowCount === 0) {
                        searchInput.setAttribute('disabled', 'disabled');
                    } else {
                        searchInput.removeAttribute('disabled');
                    }
                });

                const deleteBtn = document.getElementById('deleteBtnEpi');
                table.on('select deselect', function () {
                    const selectedRows = table.rows({ selected: true }).count();
                    deleteBtn.style.display = selectedRows > 0 ? 'inline-block' : 'none';
                });

                deleteBtn.addEventListener('click', () => {
                    table.rows({ selected: true }).remove().draw();
                    deleteBtn.style.display = 'none';
                });
            });
        </script>

        <!-- Consulta de CA (via backend) -->
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const buttons = document.querySelectorAll('.btn-consultar-ca');

                function setStatus(rowEl, text, kind) {
                    const el = rowEl.querySelector('.validade-status');
                    if (!el) return;

                    el.classList.remove('text-zinc-400', 'text-green-600', 'text-red-500', 'text-amber-500');
                    if (kind === 'success') el.classList.add('text-green-600');
                    else if (kind === 'error') el.classList.add('text-red-500');
                    else if (kind === 'warn') el.classList.add('text-amber-500');
                    else el.classList.add('text-zinc-400');

                    el.textContent = text;
                }

                async function consultarCA(ca) {
                    // Ajuste este endpoint para o seu backend.
                    // Esperado (exemplo):
                    // GET /api/epi/ca/12345 -> { "ca":"12345", "validade":"2027-03-10", "status":"Válido" }
                    const res = await fetch(`/api/epi/ca/${encodeURIComponent(ca)}`, {
                        method: 'GET',
                        headers: { 'Accept': 'application/json' }
                    });

                    if (!res.ok) {
                        throw new Error('Falha ao consultar CA');
                    }
                    return await res.json();
                }

                buttons.forEach(btn => {
                    btn.addEventListener('click', async () => {
                        const ca = btn.getAttribute('data-ca');
                        const row = btn.closest('tr');
                        if (!ca || !row) return;

                        btn.disabled = true;
                        btn.classList.add('opacity-60', 'cursor-not-allowed');
                        setStatus(row, 'Consultando...', 'info');

                        try {
                            const data = await consultarCA(ca);

                            // Aceita "validade" em ISO (YYYY-MM-DD) ou texto vindo do backend
                            const validadeTxt = data?.validade ? String(data.validade) : 'Não informado';
                            const statusTxt = data?.status ? ` (${data.status})` : '';

                            setStatus(row, `Validade: ${validadeTxt}${statusTxt}`, 'success');
                        } catch (e) {
                            console.error(e);
                            setStatus(row, 'Não foi possível consultar. Tente novamente.', 'error');
                        } finally {
                            btn.disabled = false;
                            btn.classList.remove('opacity-60', 'cursor-not-allowed');
                        }
                    });
                });
            });
        </script>

